<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardElevation="@dimen/margin_2"
                                   app:cardPreventCornerOverlap="false"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardCornerRadius="@dimen/margin_2"
                                   app:cardUseCompatPadding="true">

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/string_bal"
            android:layout_width="wrap_content"
            android:textColor="@color/fluorescentGreen"
            android:layout_height="wrap_content" android:id="@+id/bal" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintVertical_bias="0.011"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/bal"
            android:id="@+id/desc" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/dd_mm_yyyy"
            app:layout_constraintTop_toTopOf="@+id/bal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" android:layout_marginEnd="@dimen/margin_8" android:layout_marginRight="@dimen/margin_8"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8" android:layout_marginBottom="@dimen/margin_8"
            app:layout_constraintBottom_toBottomOf="@+id/desc"
    app:layout_constraintHorizontal_bias="0.97"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>